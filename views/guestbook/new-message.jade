extends ../layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Add a message
                    div.account-wall
                        form(class="form-new-message", action="/guestbook/new-message", method="POST")
                            input#field(type="text", name='message', class="form-control", placeholder="Message", required, autofocus)
                            button#send(class='btn btn-lg btn-primary btn-block', type='submit') Submit
